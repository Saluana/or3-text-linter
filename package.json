{
    "name": "tiptap-linter",
    "version": "1.0.0",
    "description": "A comprehensive, extensible linting solution for Tiptap and ProseMirror editors with AI-powered rules and customizable popovers",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CHANGELOG.md",
        "SECURITY.md",
        "CONTRIBUTING.md"
    ],
    "keywords": [
        "tiptap",
        "prosemirror",
        "linter",
        "editor",
        "ai",
        "natural-language",
        "writing",
        "grammar",
        "style-guide"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Saluana/or3-text-linter"
    },
    "bugs": {
        "url": "https://github.com/Saluana/or3-text-linter/issues"
    },
    "homepage": "https://github.com/Saluana/or3-text-linter#readme",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "prepublishOnly": "npm run build && npm test",
        "test": "vitest --run",
        "test:watch": "vitest",
        "dev": "vite",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix"
    },
    "peerDependencies": {
        "@tiptap/core": "^2.1.0",
        "@tiptap/pm": "^2.1.0",
        "vue": "^3.0.0"
    },
    "peerDependenciesMeta": {
        "vue": {
            "optional": true
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@fast-check/vitest": "^0.2.3",
        "@tiptap/extension-document": "^2.1.0",
        "@tiptap/extension-heading": "^2.1.0",
        "@tiptap/extension-paragraph": "^2.1.0",
        "@tiptap/extension-text": "^2.1.0",
        "@tiptap/vue-3": "^2.1.0",
        "@types/bun": "latest",
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "@typescript-eslint/parser": "^8.48.1",
        "@vitejs/plugin-vue": "^5.0.0",
        "eslint": "^9.39.1",
        "fast-check": "^3.0.0",
        "jsdom": "^27.2.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vitest": "^1.0.0",
        "vue": "^3.3.0"
    }
}
